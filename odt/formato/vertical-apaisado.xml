//vertical
<office:automatic-styles>
		
		<style:page-layout style:name="Mpm1">
			<style:page-layout-properties fo:page-width="20.999cm" 
			fo:page-height="29.699cm" style:num-format="1" 
			style:print-orientation="portrait" 
			fo:margin-top="2cm" fo:margin-bottom="2cm" 
			fo:margin-left="2cm" fo:margin-right="2cm" 
			style:writing-mode="lr-tb" 
			style:footnote-max-height="0cm">
			
			<style:footnote-sep style:width="0.018cm" style:distance-before-sep="0.101cm" style:distance-after-sep="0.101cm" style:adjustment="left" style:rel-width="25%" style:color="#000000"/>
			</style:page-layout-properties>
			<style:header-style>
				<style:header-footer-properties fo:min-height="0cm" fo:margin-bottom="0.499cm"/>
			</style:header-style>
			<style:footer-style/>
		</style:page-layout>
		
</office:automatic-styles>

